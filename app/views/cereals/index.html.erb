<p id="notice"><%= notice %></p>

<h1>Cereals</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cereals.each do |cereal| %>
      <tr>
        <td><%= cereal.title %></td>
        <td><%= cereal.description %></td>
        <td><%= link_to 'Show', cereal %></td>
        <td><%= link_to 'Edit', edit_cereal_path(cereal) %></td>
        <td><%= link_to 'Destroy', cereal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

